<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/gray3"
        android:backgroundTint="@color/gray3"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <View
                android:id="@+id/item_priority"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="3dp"
                android:background="@drawable/green_dot" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:fontFamily="@font/open_sans_bold"
                android:maxLines="1"
                android:text="Note app"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="InvalidId" />
            <TextView
                android:id="@+id/item_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:fontFamily="@font/open_sans_bold"
                android:maxLines="1"
                android:text="Note app"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="InvalidId" />

            <TextView
                android:id="@+id/item_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/gray"
                android:fontFamily="@font/open_sans_light"
                android:text="Note appsdbgvpaorgj'dfl;kmnsaj'ergmnap'rgjkl;margjalgjnaj'wegmpargjoajwegiopaerogjmnl;gjarijgarkl;emoipjgaropiagj;joaeg"
                android:textColor="@color/gray1"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/item_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:fontFamily="@font/open_sans_bold"
                android:maxLines="1"
                android:text="15 march 2022"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:ignore="InvalidId" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>