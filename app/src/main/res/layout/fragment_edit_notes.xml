<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black7">

    <LinearLayout
        android:id="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp">

        <TextView
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/edittaxt_background"
            android:fontFamily="@font/open_sans_bold"
            android:padding="13dp"
            android:text="Edit toolbar"
            android:textColorHint="@color/white"
            android:textSize="25sp" />


        <EditText
            android:id="@+id/edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/edittaxt_background"
            android:fontFamily="@font/open_sans_bold"
            android:hint="Title"
            android:padding="13dp"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittaxt_background"
            android:fontFamily="@font/open_sans_bold"
            android:hint="SubTitle"
            android:padding="13dp"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red_dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/red_dot" />

            <ImageView
                android:id="@+id/yellow_dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/yellow_dot" />

            <ImageView
                android:id="@+id/green_dot"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:background="@drawable/green_dot" />
        </LinearLayout>

        <EditText
            android:id="@+id/edit_notes"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@drawable/edittaxt_background"
            android:fontFamily="@font/open_sans_bold"
            android:gravity="top"
            android:hint="Notes"
            android:padding="13dp"
            android:textColorHint="@color/white"
            android:textSize="18sp" />

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="26dp"
        android:src="@drawable/ic_baseline_done_24"
        app:backgroundTint="#F4511E" />

</FrameLayout>